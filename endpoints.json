{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles in created_at DESC order",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles?sort_by=title&order=desc": {
    "description": "serves all articles sorted by title in desc order",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "A",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:id": {
    "description": "sends back a single article of the desired id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments related to an article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "body": "Seafood substitutions are increasing",
          "votes": 16,
          "author": "some_guy",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "inserts a comment into the comments table, and creates a relationship with an article",
    "queries": [],
    "exampleResponse": {
      "comments": {
        "comment_id": 1,
        "body": "Seafood substitutions are increasing",
        "votes": 0,
        "author": "john_smith",
        "created_at": "2018-05-30T15:59:13.341Z",
        "article_id": 1
      }
    }
  },
  "PATCH /api/articles/:id": {
    "description": "increments votes field in an article by given number",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 1,
        "comment_count": 6
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment when provided an id",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "retrieves all users from the database",
    "queries": [],
    "exampleResponse": [
      {
        "username": "john768",
        "name": "John",
        "avatar_url": "https://www.healthyies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }
    ]
  }
}
